# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=replace-with-password
DATABASE_NAME=movie_db

# JWT Configuration
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d

# TMDB API Configuration
TMDB_API_KEY=replace-with-tmdb-api-key
TMDB_BASE_URL=https://api.themoviedb.org/3

# Application Configuration
PORT=8080
NODE_ENV=development

# TypeORM (optional)
TYPEORM_SYNCHRONIZE=true
TYPEORM_LOGGING=false
DB_POOL_MAX=20
DB_POOL_MIN=5

# AWS S3 (optional, for upload)
AWS_ACCESS_KEY_ID=replace-with-access-key
AWS_SECRET_ACCESS_KEY=replace-with-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=replace-with-bucket-name

# Catalog limits (optional, seed default values for sync_settings)
MOVIE_CATALOG_LIMIT=500000
TV_CATALOG_LIMIT=200000
TRENDING_CATALOG_LIMIT=100
